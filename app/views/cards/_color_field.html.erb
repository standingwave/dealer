<%= turbo_frame_tag dom_id(card) do %>
  <%= form_with model: card, url: update_attribute_card_path(card, :color, format: :turbo_stream), method: :patch,
          html: { data: { controller: "buttonless" } } do |form| %>
    <%= form.select :color, Card::COLOR.collect { |p| [p, p] } %>
  <% end %>
<% end %>