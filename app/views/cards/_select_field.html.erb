<%= turbo_frame_tag dom_id(card) do %>
  <%= form_with model: card, url: update_attribute_card_path(card, attribute, format: :turbo_stream), 
      method: :patch, html: { data: { controller: "buttonless" } } do |form| %>
    <%= form.select attribute, options_for_select(select_options) %>
  <% end %>
<% end %>